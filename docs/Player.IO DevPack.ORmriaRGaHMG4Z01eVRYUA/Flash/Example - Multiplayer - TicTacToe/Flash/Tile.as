package {	import flash.display.MovieClip	import flash.events.MouseEvent	import flash.display.SimpleButton	public class Tile extends MovieClip{		public var XPosition:int		public var YPosition:int						function Tile(x:int,y:int){			stop(); //We got things on other keyframes so we need to stop it			//Setup the tile			this.x = x*100			this.y = y*100			this.XPosition = x			this.YPosition = y						//Make sure we get the event from the correct event element			//The button is only there to give us a nice hand cursor			eventTarget.addEventListener(MouseEvent.CLICK, handleClick)		}		public function SetState(state:String){			switch(state){				case "blank":{					this.gotoAndStop("blank")					break				}				case "cross":{					this.gotoAndStop("cross")					break;				}				case "circle":{					this.gotoAndStop("circle")					break				}			}		}		override public function set enabled(state:Boolean):void{			eventTarget.enabled = state					}		private function handleClick(e:MouseEvent){			e.stopImmediatePropagation()			dispatchEvent(new MouseEvent(MouseEvent.CLICK,true)) 		}	}	}