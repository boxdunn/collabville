package  {	import flash.display.MovieClip;	import flash.events.Event;	import fl.transitions.Tween;	import fl.transitions.easing.Strong;	import fl.transitions.TweenEvent;	import flash.utils.setTimeout;	import flash.events.MouseEvent;		public class InfoBox extends MovieClip{		private var tweens:Array = new Array()		public function InfoBox(head:String, text:String) {			headline.text = head			description.text = text;			addEventListener(Event.ADDED_TO_STAGE, handleAttach)			addEventListener(MouseEvent.MOUSE_DOWN, startGame)		}				private function startGame(e:MouseEvent):void{			addEventListener(MouseEvent.MOUSE_DOWN, startGame)						e.preventDefault()			e.stopImmediatePropagation()						var self:InfoBox = this			var t:Tween = new Tween(self, "y", Strong.easeOut, self.y, self.y-20, .2, true)			t.addEventListener(TweenEvent.MOTION_FINISH, function(e:TweenEvent):void{				self.parent.removeChild(self);			})			tweens.push(t)			tweens.push(new Tween(self, "alpha", Strong.easeOut, 1, 0, .2, true))		}				private function handleAttach(e:Event):void{			tweens.push(new Tween(this, "y", Strong.easeIn, this.y+20, this.y, .2, true))			tweens.push(new Tween(this, "alpha", Strong.easeIn, 0, 1, .2, true))					}	}}