package states.gamestate {	import flash.events.Event;	import flash.display.MovieClip;	public class Fragment extends MovieClip{		private var angle:Number		private var age:int		public function Fragment(angle:Number, type:int = 1) {			this.angle = angle			this.rotation = 180/Math.PI * angle			gotoAndStop(type)		}		public function tick():Boolean{						var xspeed:Number = Math.cos(angle)			var yspeed:Number = Math.sin(angle)						this.x += xspeed * 2			this.y += yspeed * 2						age++						this.alpha = (50-age)/50						return age >= 50		}	}}