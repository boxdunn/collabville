package  states.gamestate{	import flash.display.MovieClip;	import flash.events.Event;	public class Bomb extends MovieClip{		private var angle:Number = Math.random()*Math.PI*2		public function tick(){									var xspeed:Number = Math.cos(angle)			var yspeed:Number = Math.sin(angle)						this.x += xspeed 			this.y += yspeed 						if(this.x > 640 || this.x < 0){				xspeed *= -1				this.x += xspeed			}			if(this.y > 480 || this.y < 40){				yspeed *= -1				this.y += yspeed			}						angle = Math.atan2(yspeed,xspeed);		}	}}