package states.gamestate {	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.events.MouseEvent;		public class GameTop extends MovieClip{		private var callback:Function		public function GameTop(callback:Function) {						this.callback = callback						goaltext.embedFonts = true			goaltext.defaultTextFormat = new TextFormat( new Stone().fontName, 20, 0xffffff);			goaltext.text = ""						menubtn.addEventListener(MouseEvent.MOUSE_DOWN, handleClick)		}				private function handleClick(e:MouseEvent):void{			e.preventDefault()			e.stopImmediatePropagation()			callback();		}				public function set text(s:String){			goaltext.text = s;		}	}}