package sample.ui.components{	import flash.display.Sprite	import flash.display.DisplayObject	public class Columns extends Box{		private var container:Component = new Component()		private var _spacing:Number=0		function Columns(...args){			super.addChild(container);			for each(var d:DisplayObject in args){				addChild(d);			}		}				public override function addChild(child:DisplayObject):DisplayObject{			var ret:DisplayObject = container.addChild(child)			redraw()			return ret;		}				public override function removeChild(child:DisplayObject):DisplayObject{			var ret:DisplayObject = container.removeChild(child)			redraw()			return ret;		}				public function spacing(spacing:Number):*{			_spacing = spacing/2			return this		}		protected override function redraw():void{						var childWidth:Number = (_width-borderWidth)/container.numChildren;			for( var a:int=0;a<container.numChildren;a++){				var child:DisplayObject = container.getChildAt(a);				child.width = childWidth-_spacing				child.x = (childWidth+_spacing)*a			}						super.redraw()		}	}}