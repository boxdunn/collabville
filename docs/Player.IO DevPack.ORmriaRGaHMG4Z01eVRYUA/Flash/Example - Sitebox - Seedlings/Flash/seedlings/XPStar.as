package seedlings{	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.filters.GlowFilter;		public class XPStar extends MovieClip{		private var offset:int = 0;		private var ticks:int = 0;		private var xSpeed:Number = Math.random()*4-2		private var ySpeed:Number = -Math.random()*10-10		public function XPStar() {			//Add attach handler			addEventListener(Event.ADDED_TO_STAGE, handleAttach)			//Give star hand cursor			this.useHandCursor = true;			this.buttonMode = true;			this.scaleX = this.scaleY = 0;		}				private function handleAttach(e:Event):void{			//Add mouse and enterframe handlers			addEventListener(Event.ENTER_FRAME, handleEnterFrame)			this.addEventListener(MouseEvent.MOUSE_OVER, handleMouseOver);			this.addEventListener(MouseEvent.MOUSE_OUT, handleMouseOut);		}				private function handleEnterFrame(e:Event):void{			//If we are in animation, move star			this.scaleX = this.scaleY = Math.min( (++ticks/10), 1)			this.x += xSpeed			this.y += ySpeed			ySpeed += 1			//If the star hit a position above y400 stop the movement			if(this.y>=400){				this.y = 400				//Remove enterfame listener				removeEventListener(Event.ENTER_FRAME, handleEnterFrame)			}		}				//Mouse hover effect handlers		private function handleMouseOver(e:MouseEvent):void{			this.filters = [new GlowFilter(0xffffff, 1, 4, 4, 10, 3)];					}		private function handleMouseOut(e:MouseEvent):void{			this.filters = [];		}	}}