package seedlings {		import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Loader;	import flash.events.IOErrorEvent;	import flash.net.URLRequest;	import flash.system.LoaderContext;	import flash.events.SecurityErrorEvent;		//Friendlist item handler	public class FriendsListItem extends MovieClip {		public function FriendsListItem(playername:String, points:String, level:int, imagePath:String) {						//Set attributes			lpoints.embedFonts = true;			lpoints.text = points + "xp"			lpoints.mouseEnabled = false			llevel.embedFonts = true			llevel.text = "Level " + level			llevel.mouseEnabled = false						lname.text = playername			lname.mouseEnabled = false			//Load picture			loadPicture(imagePath)		}				private var imageLoader:Loader = new Loader()		private function loadPicture(path:String):void{			if(path != null){				//Load picture				imageLoader.contentLoaderInfo.addEventListener(Event.COMPLETE, handlePictureLoaded);				imageLoader.contentLoaderInfo.addEventListener(IOErrorEvent.IO_ERROR, function():void{/*Do nothing*/})				//The facebook static image CDN does not have a crossdomain.xml file so we trap security errors when requesting "no profile" images				imageLoader.contentLoaderInfo.addEventListener(SecurityErrorEvent.SECURITY_ERROR, function():void{/*Do nothing*/})				imageLoader.load(new URLRequest(path), new LoaderContext(true))			}		}		private function handlePictureLoaded(e:Event):void{			//Attaching the image might throw a security error, we trap and discard those			try{				//Onload add content to imagecontainer				imagecontainer.addChild(imageLoader.content)			}catch(e:Error){/*Do nothing*/}		}	}	}