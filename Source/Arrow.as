package {	import flash.display.MovieClip	import flash.text.TextField	import flash.events.Event	import flash.events.MouseEvent	import flash.filters.BevelFilter;	import flash.filters.DropShadowFilter;	import flash.geom.ColorTransform		public class Arrow extends MovieClip{		public var Attached:Letter = null;		function Arrow(color:Number){			var bevel:BevelFilter = new BevelFilter(2,45,0xFFFFFF,1,0x000000,1,1,1,0.16,3,"inner",false)			var dropShadow:DropShadowFilter = new DropShadowFilter(2,45,0x000000,1,5,5,1,1,false,false,false)			this.filters = [bevel, dropShadow]						var c:ColorTransform = new ColorTransform();			c.color = color						this.transform.colorTransform = c;		}	}	}